{
    "compilerOptions": {
      "target": "ES2018",
      "module": "commonjs",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "alwaysStrict": true,
      "sourceMap": true,
      "outDir": "dist",
      "rootDir": "src"
    },
    "lib": ["es2015"],
    "exclude": [ "node_modules" ],
    "include": [ "src/**.ts" ]
}
